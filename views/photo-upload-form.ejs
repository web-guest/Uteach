<%- include('includes/header') %> <%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <%- include('includes/designs/desktop-screen-left-part') %>
  <div class="col-lg-6 pt-2 "  >
  <!-- file upload form -->
   <div class="item-container mb-2" >
     <h3 class="bolder text-center"><strong >Photo Upload</strong></h3>
     <div style="display: flex;">
       <div>
         <img class="avatar-small" style="top:7px ;margin-left: 0rem;margin-right: 2px;" src="/images/profile/profile-<%=user.username%>.jpg" alt="">
       </div>
       <form action="/post-create" method="post"  style="display:block;width: 100%;" enctype="multipart/form-data">
         <div class="post-form-container" style="margin-bottom: 2px;">
           <textarea  name="body" id="post" class="post-input-field" placeholder="Write caption here."  type="text"></textarea>
          </div>
           <div class="input-group post-form-container" style="margin-bottom: 2px;">
             <div class="input-group-prepend">
               <span class="input-group-text">Upload</span>
             </div>
             <div class="custom-file">
               <input type="file" name="postFile" class="custom-file-input" required id="inputGroupFile01">
               <label class="custom-file-label" for="inputGroupFile01">Choose file (.jpg formated)</label>
             </div>
           </div>
           <input type="hidden" name="postType" value="photo">
           <input type="hidden" name="_csrf" value="<%=csrfToken%>">
           <button class="btn btn-primary btn-block" style="border-radius: 10px;">Submit</button>
       </form>
     </div>
     <hr style="margin-bottom: .35rem;">
   </div>
   <div class="item-container">
    <h5 class="bolder"><strong>Your all photoes</strong></h5>
    <div style="display: flex;flex-wrap: wrap;">
      <%if(!photoLinks.length){%>
        <div class=" btn btn-primary btn-block m-2">You have no uploaded photo!!</div>
      <%}%>
      <%photoLinks.forEach((link)=>{%>
        <div class="m-1" style="height: 200px;width:47%;background-color: aliceblue;">
          <img src=<%=link%> style="width: 100%;height: 100%;object-fit: cover;" alt="">
          </div>
      <%})%>
     </div>
   </div>
   <!-- ------------------ -->
  </div>
  <%- include('includes/designs/desktop-screen-right-part') %>
</div>

<%- include('includes/footer') %>

<%- include('includes/header') %> <%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
<div class="col"></div>
<div class="col-sm-8" style="margin: 0;padding: 0;">
<p><%=itemData.noteType%></p>
    <h4 class="bolder">Edit Note</h4>
    <form action="/library/item/<%=itemData.index%>/edit" method="POST" id="library-form">
      
        <label for="noteType" class="text-muted mb-1"><small>Note Type</small></label>
        <select name="noteType" id="noteType" class="form-control form-control-lg"  form="library-form">
          <option value="<%=itemData.noteType%>"><%=itemData.noteType%></option>
          <option value="text">Text</option>
          <option value="webLink">Web Site Link</option>
        </select>
      
      <label for="about-register" class="text-muted"><small>About</small></label>
      <input required id="about-register" name="about" value="<%=itemData.about%>" class="form-control form-control-lg space" type="text" placeholder="Heading of the note">
      <label for="body-register" class="text-muted"><small>Note body-content/link</small></label>
      <textarea required name="content" id="body-register" cols="10" rows="5" class="form-control form-control-lg space" type="text"><%=itemData.content%></textarea>
      <input type="hidden" name="_csrf" value="<%=csrfToken%>">
      <button class="btn btn-primary btn-block btn-lg">Submit note</button>
    </form>
  
</div>
<div class="col">

</div>
</div>



<%- include('includes/footer') %>

<%- include('includes/header') %>
 <%- include('includes/flash') %>

<div class="mt-2" style="display: flex;flex-wrap: wrap;">
  <div class="col" ></div>
  <div class="col-lg-8 " style="margin-bottom: 2rem;" >
    <div class="signUp-form-container ">   
      <h4 class="bolder text-left">Search near by batches</h4>
      <form action="/batch-search-results" method="POST" id="createBatch-form">
       
        <div class="form-group">
          <label for="class" class="text-muted mb-1"><small>Select your class</small></label>
          <select id="class" class="form-control form-control-lg" name="class" form="createBatch-form">
            <option value="1st">Class 1</option>
            <option value="2nd">Class 2</option>
            <option value="3rd">Class 3</option>
            <option value="4th">Class 4</option>
            <option value="5th">Class 5</option>
            <option value="6th">Class 6</option>
            <option value="7th">Class 7</option>
            <option value="8th">Class 8</option>
            <option value="9th">Class 9</option>
            <option value="10th">Class 10</option>
            <option value="11th">Class 11</option>
            <option value="12th">Class 12</option>
            <option value="all">All</option>
          </select>
        </div>
        <h6><strong class="text-primary"><i class="fas fa-map-marker-alt"></i> Select the area in which you want tuition-batchs.</strong></h6>
        <div id="address-part">
          <div class="form-group">
            <label for="districtPart" class="text-muted mb-1"><small>Select Your District</small></label>
            <select id="districtPart" class="form-control form-control-lg" name="district" form="createBatch-form">
              <option value="">--Select your district--</option>
              <option value="Darjeeling">Darjeeling</option>
              <option value="Jalpaiguri">Jalpaiguri</option>
            </select>
          </div>
          <div class="form-group">
            <label for="policeStationPart" class="text-muted mb-1"><small>Select Police Station</small></label>
            <select id="policeStationPart" class="form-control form-control-lg" name="policeStation" form="createBatch-form">
            </select>
          </div>
          <div class="form-group">
            <label for="postOfficePart" class="text-muted mb-1"><small>Select Post Office</small></label>
            <select id="postOfficePart" class="form-control form-control-lg" name="postOffice" form="createBatch-form">
            </select>
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
        <button type="submit" class="py-3 mt-4 btn btn-lg btn-success btn-block">Search Batch</button>
        </div>
      </form>
  </div>
  <div class="col" ></div>
</div>
<%- include('includes/footer') %>


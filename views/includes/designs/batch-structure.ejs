          <a href="/homeTuitionAnnouncement/<%=announcement._id%>/details">
            <div class="class btn btn-primary btn-sm">
              Go to details
            </div>
          </a>
          <form action="/delete/announcement/<%=announcement._id%>/homeTuition" method="POST" class="d-inline">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
            <button class="btn  btn-danger btn-sm m-2"><i class="fas fa-trash"></i> Delete</button>

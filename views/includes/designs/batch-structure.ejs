<%if(accountType=="teacher" || accountType=="studentTeacher"){%>

  <div class="path">
    <div style="display: flex;flex-wrap: wrap;">
      <div class="col-md-6" style="width: 100%;">
        <a href="/create-batch">
          <div class="btn btn-primary btn-block"><i class="far fa-plus-square"></i>&nbsp; Create new batch</div>
        </a>
        <hr class="visibleItemsOnCollapse">
      </div>
      <div class="col-md-6">
        <a href="/create-home-tuition-announcement">
          <div class="btn btn-secondary btn-block"><i class="far fa-plus-square"></i>&nbsp; Home-tuition announcement</div>
        </a>
      </div>
    </div>
  </div>

<%}else{%>
  
    <div class="path">
      <div style="display: flex;flex-wrap: wrap;">
        <div class="col-md-6" style="width: 100%;">
          <h5><strong class="bolder" style="color: #fff;">You can be a teacher as well.It is so simple.</strong></h5>
          <hr class="visibleItemsOnCollapse">
        </div>
        <div class="col-md-6">
            <h5><strong class="bolder" style="color: #fff;">
              <a href="/upgradeAccount-form">Click here</a>
              to upgrade your account as a teacher.
            </strong></h5>
        </div>
      </div>
    </div>

<%}%>
<%if(accountType=="student" || accountType=="studentTeacher"){%>
<div class=" item-container  mb-1" style="background-color:#f0f2f5 ;padding: 0;">
  <h5 class="bolder text-primary ">Students Batch Data</h5>
  <h6 class="bolder">All running batches</h6>
  <%if(!batches.studentBatches.presentBatches.length){%>
    <div>
      <div class="btn btn-primary btn-block mb-2">There is no present batch available.</div>
      <a href="/search-batch-form"><div class="btn btn-success btn-block"><i class="fas fa-search"></i> Search running batches in your area.</div></a>
    </div>
  <%}%>
  <div class="teacher-banner-container pb-2">
    
    <%batches.studentBatches.presentBatches.forEach((batch)=>{%>
      <div class="batch-data">
        <div style="position: relative;">
          <img class="teacher-image-batch"  src="/images/cover/cover-<%=batch.username%>.jpg" alt="">
          <div class="batch-no text-capitalize"><%=batch.batchMood%></div>
        </div>
        <div class="text-left batch-data-container" >
          <span class="d-block"><strong>Teacher name : </strong> <%=batch.teacherName%></span>
          <span class="d-block"><strong>Class : </strong> <%=batch.class%></span>
          <span class="d-block"><strong>Subject : </strong><%=batch.subjects%></span>
          <span class="d-block"><strong>Days : </strong><%=batch.days%></span>
          <span class="d-block"><strong>Time : </strong><%=batch.classTime%></span>
          <div>
            <a href="/viewSingleBatch/<%=batch._id%>">
              <div class="class btn btn-primary btn-sm">
                Batch details
              </div>
            </a>
            <a href="/group-chat/<%=batch._id%>">
              <div class="btn btn-sm  btn-success "><i class="fas fa-comment"></i> Group chatting</div>
            </a>
          </div>
        </div>
      </div>
    <%})%>
  </div>
</div>


